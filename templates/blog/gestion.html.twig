{% extends "base.html.twig" %}

{% block title %}Gestion des articles{% endblock %}
{% block body %}

<div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <td>#</td>
                <td>titre</td>
                <td>image</td>
                <td>contenu</td>
                <td>date</td>
                <td>option</td>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
    <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td> <img src="{{ article.image }}" alt="" width="50"> </td>
                <td>{{ article.content|raw }}</td>
                <td>{{ article.createdAt|date('d/m/Y Ã  H:i:s') }}</td>
                <td>
                    <a href="{{ path('blog_show', {id:article.id}) }}" class="text-info">voir</a>
                    <a href="{{ path('blog_modifier', {id:article.id}) }}" class="text-warning">modifier</a>
                    <a href="{{ path('blog_supprimer', {id:article.id}) }}" class="text-delete">supprimer</a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}